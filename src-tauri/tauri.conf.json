{
  "build": {
    "beforeDevCommand": "cls && yarn dev",
    "beforeBuildCommand": "cls && yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Hallowen Launcher",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://5.78.73.47:100/**", "http://localhost:5000/**"]
      },
      "shell": {
        "all": true,
        "execute": true
      },
      "all": true,
      "protocol": {
        "all": true,
        "assetScope": ["*/**"]
      },
      "fs": {
        "all": true,
        "scope": ["*/**"]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "maximizable": false,
        "resizable": false,
        "title": "Hallowen Launcher",
        "decorations": false,
        "center": true,
        "transparent": true,
        "minWidth": 1400,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": "default-src * 'unsafe-inline' 'unsafe-eval' data: blob:; img-src * data: blob:;"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.PabloMP.app",
      "icon": [
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": []
    }
  }
}
